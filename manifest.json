{
  "manifest_version": 3,
  "name": "declickbait",
  "version": "0.0",
  "description": "Replaces YouTube clickbait titles with informative semantically equivalent alternatives",
  "content_scripts": [
    {
      "js": 
      [
        "scripts/winkPosTagger.js",
        "scripts/winkSentiment.js", 
        "scripts/content.js"
      ],
      "matches": ["*://*.youtube.com/*"],
      "run_at" : "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_page": "options.html"
}