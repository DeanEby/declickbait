{
  "manifest_version": 3,
  "name": "youtube declickbait",
  "version": "1.0",
  "description": "Allows you to be more intentional about the content you view on youtube.",
  "action": {
    "default_icon": "declickbait.png"
  },
  "content_scripts": [
    {
      "js": 
      [
        "scripts/winkSentiment.js", 
        "scripts/content.js"
      ],
      "matches": ["*://*.youtube.com/*"],
      "run_at" : "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_page": "options.html"
}